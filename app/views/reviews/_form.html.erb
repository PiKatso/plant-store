<%= form_for [@product, @review] do |f| %>
  <div class="form-group">
    <%= f.label "content"%>
    <%= f.text_field :content, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "location"%>
    <%= f.text_area :location, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-success' %>
<% end %>
