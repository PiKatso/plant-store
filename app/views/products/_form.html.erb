<%= form_for @product do |f| %>
  <div class="form-group">
    <%= f.label "name"%>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "description"%>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "price"%>
    <%= f.number_field :price, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "care"%>
    <%= f.text_field :care, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "origin"%>
    <%= f.text_field :origin, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "species"%>
    <%= f.text_field :species, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "family"%>
    <%= f.text_field :family, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "image"%>
    <%= f.text_field :image, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-success' %>
<% end %>
